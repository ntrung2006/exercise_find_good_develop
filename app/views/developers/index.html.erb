<p id="notice"><%= notice %></p>

<h1>Developers</h1>

<%= form_for @developer_search_form, url: '/search' do |f| %>
  <%= f.select :programming_language_id, @programming_languages, prompt: 'Select Developer Programming', name: 'Developer Programming' %>
  <%= f.select :language_id, @languages, prompt: 'Select Language', name: 'Developer Language' %>
  <%= f.submit 'Search' %>
<% end %>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= t('email') %></th>
      <th><%= t('programming_languages') %></th>
      <th><%= t('languages') %></th>
      <th colspan="3"><%= t('actions') %></th>
    </tr>
  </thead>

  <tbody>
    <% @developers.each do |developer| %>
      <tr>
        <td><%= developer.email %></td>
        <td><%= developer.programming_languages.pluck(:name).join(', ') %></td>
        <td><%= developer.languages.pluck(:code).join(', ') %></td>
        <td><%= link_to 'Show', developer %></td>
        <td><%= link_to 'Edit', edit_developer_path(developer) %></td>
        <td><%= link_to 'Destroy', developer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Developer', new_developer_path %>
